<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <TextView
                android:id="@+id/tvItemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:gravity="right|bottom"
                android:textStyle="bold"
                android:textSize="@dimen/itemScheduleTitle"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/tvItemScheduleAMPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A.M."
                android:gravity="right|top"
                android:textSize="@dimen/itemScheduleAMPM"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tvItemScheduleConferenceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamanioTitulo"
                android:text="@string/name_conference"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:lines="1"
                />
            <TextView
                android:id="@+id/tvItemScheduleConferenceSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamanioSubtitulo"
                android:text="@string/name_speaker"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tvItemScheduleTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamanioSubtitulo"
                android:text="Tag"
                android:textColor="#FFFFFF"
                android:lines="1"
                android:ellipsize="end"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>